<%= form_with url: "/backend/profile/post_general", scope: @profile, local: true do |form| %>
  <div class="modal-header">
    <h2 class="modal-title" id="myModalLabel">Edit Profile <%= @profile.id %></h2>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
  </div>

  <div class="modal-body">
    <div class="form-row">
      <div class="col-12 col-md-6 mb-3">
        <label>Firstname</label>
        <input type="text" name="firstname" class="form-control" placeholder="Firstname" value="<%= @profile.firstname %>" />
      </div>
      <div class="col-12 col-md-6 mb-3">
        <label>Lastname</label>
        <input type="text" name="lastname" class="form-control" placeholder="Lastname" value="<%= @profile.lastname %>" />
      </div>
    </div>

    <div class="form-row">
      <div class="col-12 col-md-6 mb-3">
        <label>Phone number</label>
        <input type="text" name="phone_number" class="form-control" placeholder="" value="<%= @profile.phone_number %>" />
      </div>
      <div class="col-12 col-md-6 mb-3">
        <label>Mobile number</label>
        <input type="text" name="mobile_number" class="form-control" placeholder="" value="<%= @profile.mobile_number %>" />
      </div>
    </div>

  </div>

  <div class="modal-footer">
    <div class="actions">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <%= form.submit "Update", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
