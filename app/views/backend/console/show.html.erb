<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-8">
      <div class="card">
                <div class="card-body">



                  <div class="row">
                    <div class="col-4 pt-1">

                      <% # link_to 'Back', posts_path, class: "btn btn-sm", role: "button" %>

                      <a href="/backend/console/" class="btn btn-rounded-circle btn-primary">
                        <span class="fe fe-arrow-left-circle"></span>
                      </a>
                    </div>
                    <div class="col-4 text-center">
<%= @id %>
                    </div>
                    <div class="col-4 d-flex justify-content-end align-items-center">
                      <button type="button" class="btn btn-outline-secondary" name="Copy">Copy</button>
                    </div>
                  </div>

                </div>
                <div class="card-footer bg-dark">
                  <code id="codeContainer" class="highlight html bg-dark hljs xml">
                    <%= @what %>
                  </code>
                </div>
              </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  function CopyToClipboard(containerid) {
  if (document.selection) {
    var range = document.body.createTextRange();
    range.moveToElementText(document.getElementById("#codeContainer"));
    range.select().createTextRange();
    document.execCommand("copy");

  } else if (window.getSelection) {
    var range = document.createRange();
    range.selectNode(document.getElementById("#codeContainer"));
    window.getSelection().addRange(range);
    document.execCommand("copy");
  }
}
</script>

