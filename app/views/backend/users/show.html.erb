                </div>
              </div> <!-- / .row -->
              <div class="row align-items-center">
                <div class="col">

                  <!-- Nav -->
                  <ul class="nav nav-tabs nav-overflow header-tabs">
                    <li class="nav-item">
                      <%= link_to 'Overview', user_path + "/tab/overview", class: "nav-link " + ((@subtab == "overview") ? "active" : "") %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'Teams', user_path + "/tab/teams", class: "nav-link " + ((@subtab == "teams") ? "active" : "") %>

                    </li>
                    <li class="nav-item">
                      <%= link_to 'Reports', user_path + "/tab/reports", class: "nav-link " + ((@subtab == "reports") ? "active" : "") %>

                    </li>
                  </ul>

                </div>
              </div>

            </div>

          </div>




        </div>

        <div class="container-fluid">
          <div class="row">
            <div class="col-12 col-xl-8">
              <!-- Subtab -->
              <%= render "users/subtab/" + @subtab, id: @id %>

            </div>
            <div class="col-12 col-xl-4">

            </div>
          </div>

        </div>
    </div>
</div>



