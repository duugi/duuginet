<%= form_with url: "backend/user/post_extra", scope: @user, local: true do |form| %>
  <div class="modal-header">
    <h2 class="modal-title" id="myModalLabel">Edit Profile <%= @user.id %></h2>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
  </div>

  <div class="modal-body">
    <div class="form-row">
      <div class="col-12 col-md-6 mb-3">
        <label>Date format</label>
        <input type="text" name="date_format" class="form-control" placeholder="Date format" value="<%= @user.date_format %>" />
      </div>
      <div class="col-12 col-md-6 mb-3">
        <label>Time zone</label>
        <input type="text" name="time_zone" class="form-control" placeholder="Timezone" value="<%= @user.time_zone %>" />
      </div>
    </div>

    <div class="form-row">
      <div class="col-12 col-md-6 mb-3">
        <label><%= f.label :language %></label>
        <%= form.select(:language, User.languages.keys, {}, { :class => 'form-control' }) %>
      </div>
      <div class="col-12 col-md-6 mb-3">
      </div>
    </div>

  </div>


  <div class="modal-footer">
    <div class="actions">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <%= form.submit "Update", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
