<div class="row justify-content-center" style="margin-top:10px;">
  <div class="col-12 col-lg-10 col-xl-8">
    <p id="notice"><%= notice %></p>
    <div class="card" id="locations">
      <div class="card-header">
        <!-- Title -->
        <div class="row align-items-center">
            <div class="col">
              <!-- Title -->
              <h4 class="card-header-title">
                Locations
              </h4>
            </div>
            <div class="col-auto">

                <div class="input-group input-group-sm input-group-merge">
                  <input type="text" class="form-control form-control-prepended search" placeholder="Search">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <span class="fe fe-search"></span>
                    </div>
                  </div>
                </div>
            </div>
            <div class="col-auto">
              <!-- Button -->
              <%= link_to 'New Location', new_backend_location_path, class: "btn btn-sm btn-white" %>
            </div>
          </div>
      </div>

      <% if @backend_locations.size > 0 %>
      <div class="table-responsive mb-0">
        <table class="table table-sm table-nowrap card-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Country code</th>
              <th>Description</th>
              <th>State code</th>
              <th>Timezone code</th>
              <th>Is active</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody class="list">
            <% @backend_locations.each do |backend_location| %>
              <tr>
                <td class="name"><%= backend_location.name %></td>
                <td class="country_code"><%= backend_location.country_code %></td>
                <td class="description"><%= backend_location.description %></td>
                <td class="state_code"><%= backend_location.state_code %></td>
                <td class="timezone_code"><%= backend_location.timezone_code %></td>
                <td class="is_active"><%= backend_location.is_active %></td>
                <td><%= link_to 'Show', backend_location %></td>
                <td><%= link_to 'Edit', edit_backend_location_path(backend_location) %></td>
                <td><%= link_to 'Destroy', backend_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <% else %>
      <div class="card card-inactive" style="margin-bottom: 0px;">
        <div class="card-body text-center">
          <!-- Image -->
          <img src="/assets/img/illustrations/scale.svg" alt="..." class="img-fluid" style="max-width: 182px;">
          <!-- Title -->
          <h1>
            No Locations
          </h1>
          <!-- Subtitle -->
          <p class="text-muted">
            Create a first location
          </p>
          <!-- Button -->
          <%= link_to 'New Location', new_backend_location_path, class: "btn btn-primary" %>

        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
