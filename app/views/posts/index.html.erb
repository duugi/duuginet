<div class="container">

  <div class="blog-header py-3">


  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-4 pt-1">
      <span class="blog-header-logo text-dark">Posts</span>

    </div>
    <div class="col-4 text-center">
      <p id="notice"><%= notice %></p>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">

        <%= link_to 'Export', new_post_path, class: "btn btn-sm btn-outline-primary"; %>

      <%= link_to 'New Post', new_post_path, class: "btn btn-sm btn-outline-secondary"; %>
      <%= current_user.language %>
    </div>



  </div>

  </div>
  <div class="row">
    <div class="col-md-4 order-md-2 mb-4">

    </div>
    <div class="col-md-8 order-md-1">

      <table class="table table-sm table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
                <td>
              <% if can? :read, post %>
              <%= link_to 'Show', post %>
              <% end %>
              </td>
              <td>
              <% if can? :edit, post %>
                <%= link_to 'Edit', edit_post_path(post) %>
              <% end %>
              </td>
              <td>
              <% if can? :destroy, post %>
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>



    </div>
  </div>
</div>
