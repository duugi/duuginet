<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <div class="row align-items-center">
        <div class="col">

          <h4 class="card-header-title">
            Users
          </h4>

        </div>
        <div class="col-auto">

          <!-- Buttons -->
          <%= link_to 'New User', new_user_path, class: "btn btn-sm btn-primary d-none d-md-inline-block" %>

        </div>
      </div>
  </div>
  <div class="table-responsive">
    <table class="table table-sm table-nowrap card-table">
      <thead>
        <tr>
          <th>
            Name
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td class="text-right">

              <%= link_to 'Show', user, class: "btn btn-light btn-sm" %>
              <%= link_to 'Edit', edit_user_path(user), class: "btn btn-light btn-sm" %>
              <%= link_to 'Destroy', user, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>

              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
