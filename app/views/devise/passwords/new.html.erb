<h2 class="display-5 text-center mb-3">
Forgot your password?
</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">

              <!-- Label -->
              <%= f.label :email %>

              <!-- Input -->
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@address.com" %>

            </div>


  <div class="actions">
    <%= f.submit "Reset password", class: "btn btn-lg btn-block btn-primary mb-3" %>
  </div>
<% end %>

<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
